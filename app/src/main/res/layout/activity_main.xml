<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.msirig.calculator_poole_jayce.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/text_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="40sp"
            android:id="@+id/input"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/colorPrimary"
                android:id="@+id/button_row_1">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="clear"
                    android:text="C"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:text="("
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:text=")"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClickSigns"
                    android:text="^"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/colorPrimary"
                android:id="@+id/button_row_2">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="1"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="2"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="3"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClickSigns"
                    android:text="/"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/colorPrimary"
                android:id="@+id/button_row_3">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="4"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="5"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="6"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClickSigns"
                    android:text="*"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/colorPrimary"
                android:id="@+id/button_row_4">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="7"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="8"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="9"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClickSigns"
                    android:text="-"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:background="@color/colorPrimary"
                android:id="@+id/button_row_">

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="0"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClick"
                    android:text="."
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="calculate"
                    android:text="="
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="80dp"
                    android:onClick="onClickSigns"
                    android:text="+"
                    android:textSize="40sp"
                    tools:background="@color/colorPrimary" />
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
